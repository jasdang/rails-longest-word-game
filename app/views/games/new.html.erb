<h1>New game</h1>

<div class="flex">
  <% @letters.each do |letter| %>
    <div class="flex tile">
      <%= letter %>
    </div>
  <% end %>
</div>

<form action="/score" method="post" class="flex">
  <input type="text" name="answer" >
  <input type="submit" >
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
